<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Price Comparator</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; background-color: #f4f4f4; }
        h1 { text-align: center; color: #333; }
        .search { text-align: center; margin-bottom: 20px; }
        input { padding: 10px; width: 300px; }
        button { padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer; }
        .results { display: flex; justify-content: space-around; flex-wrap: wrap; }
        .app { background: white; padding: 20px; margin: 10px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); width: 200px; text-align: center; }
        .price { font-size: 24px; color: #28a745; }
    </style>
</head>
<body>
    <h1>Product Price Comparator</h1>
    <div class="search">
        <input type="text" id="product" placeholder="Enter product name (e.g., iPhone 14)">
        <button onclick="comparePrices()">Compare Prices</button>
    </div>
    <div id="results" class="results"></div>

    <script>
        // Mock data for demonstration. In reality, fetch from APIs.
        const mockData = {
            "iPhone 14": [
                { app: "Amazon", price: "$799" },
                { app: "eBay", price: "$750" },
                { app: "Walmart", price: "$780" }
            ],
            "MacBook Air": [
                { app: "Amazon", price: "$999" },
                { app: "Best Buy", price: "$950" },
                { app: "Apple Store", price: "$1099" }
            ]
        };

        function comparePrices() {
            const product = document.getElementById('product').value.toLowerCase();
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = '';

            if (mockData[product]) {
                mockData[product].forEach(item => {
                    const appDiv = document.createElement('div');
                    appDiv.className = 'app';
                    appDiv.innerHTML = `<h3>${item.app}</h3><p class="price">${item.price}</p>`;
                    resultsDiv.appendChild(appDiv);
                });
            } else {
                resultsDiv.innerHTML = '<p>No data found for this product. Try "iPhone 14" or "MacBook Air".</p>';
            }
        }
    </script>
</body>
</html>
